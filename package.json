{
    "name": "@hyrious/esbuild-serve",
    "version": "0.2.1",
    "description": "simple watch and reload server with esbuild",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "esbuild-serve": "dist/bin.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "yarn build && cd test && yarn run dev",
        "build": "yarn clean && esbuild-dev scripts/build.ts",
        "build:types": "tsc -p src",
        "clean": "rimraf dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hyrious/esbuild-serve.git"
    },
    "keywords": [
        "esbuild"
    ],
    "author": "hyrious",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hyrious/esbuild-serve/issues"
    },
    "homepage": "https://github.com/hyrious/esbuild-serve#readme",
    "dependencies": {
        "chokidar": "latest",
        "esbuild": "^0.9.2",
        "minimist": "latest"
    },
    "devDependencies": {
        "@hyrious/esbuild-dev": "^0.2.2",
        "@types/minimist": "^1.2.1",
        "@types/node": "^14.14.35",
        "rimraf": "^3.0.2",
        "typescript": "^4.2.3"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
